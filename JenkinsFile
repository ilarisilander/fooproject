pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/ilarisilander/fooproject'
                
            }
        }
        stage('Build') {
            steps {
                sh "mvn compile"
            }
        }
        stage('Test') {
            steps {
                sh "mvn compile"
            }
            post {
                always {
                    junit '**/TEST*.xml'
                }
            }
            
        }
        
    }
}