pipeline {
    def os = bat
    if(isUnix()) {
        os = sh
    }
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/ilarisilander/fooproject'
                
            }
        }
        stage('Build') {
            steps {
                os "mvn compile"
            }
        }
        stage('Test') {
            steps {
                os "mvn compile"
            }
            post {
                always {
                    junit '**/TEST*.xml'
                }
            }
            
        }
        
    }
}